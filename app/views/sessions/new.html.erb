<% content_for :title, "Sign In - MerchantDex" %>

<!-- Single Dark Card -->
<div class="bg-slate-900 rounded-2xl p-8 shadow-2xl">
  <!-- Header -->
  <div class="text-center mb-8">
    <h1 class="text-2xl font-bold text-white mb-2">Welcome back</h1>
    <p class="text-slate-400 text-sm">Sign in to your account</p>
  </div>

  <!-- Form -->
  <%= form_with url: session_path, method: :post, data: { turbo: false } do |form| %>
    <!-- Error Message -->
    <% if flash[:alert] %>
      <div class="mb-6 bg-gradient-to-r from-red-500/10 to-orange-500/10 rounded-xl p-4 border border-red-500/30">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-full bg-red-500/20 flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          </div>
          <p class="text-slate-300 text-sm"><%= flash[:alert] %></p>
        </div>
      </div>
    <% end %>

    <!-- Email Field -->
    <div class="mb-4">
      <label class="block text-xs font-medium text-slate-400 mb-2">Email</label>
      <%= form.email_field :email_address, 
          required: true, 
          autofocus: true, 
          autocomplete: "email", 
          placeholder: "you@example.com", 
          value: params[:email_address],
          class: "block w-full px-4 py-3 text-sm rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-500" %>
    </div>

    <!-- Password Field -->
    <div class="mb-4">
      <label class="block text-xs font-medium text-slate-400 mb-2">Password</label>
      <%= form.password_field :password, 
          required: true, 
          autocomplete: "current-password", 
          placeholder: "Enter your password",
          maxlength: 72,
          class: "block w-full px-4 py-3 text-sm rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-500" %>
    </div>

    <!-- Forgot Password -->
    <div class="text-right mb-6">
      <%= link_to "Forgot password?", new_password_path, class: "text-xs text-orange-500 hover:text-orange-400", data: { turbo: false } %>
    </div>

    <!-- Submit Button -->
    <%= form.submit "Sign in", 
        class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-4 rounded-lg text-sm transition-colors cursor-pointer" %>
  <% end %>

  <!-- Create Account Button -->
  <%= link_to signup_path, class: "block w-full text-center bg-slate-800 hover:bg-slate-700 text-white font-medium py-3 px-4 rounded-lg text-sm transition-colors mt-3", data: { turbo: false } do %>
    Create account
  <% end %>

  <!-- Footer Text -->
  <p class="text-white text-xs text-center mt-6">Don't have an account? Sign up above</p>
</div>
