<% content_for :title, "Verify Your Email - MerchantDex" %>

<!-- Single Dark Card -->
<div class="bg-slate-900 rounded-2xl p-8 shadow-2xl">
  <% if notice %>
    <div class="mb-6 bg-green-500/10 border border-green-500/30 rounded-xl p-4">
      <div class="flex items-center gap-3">
        <div class="w-6 h-6 rounded-full bg-green-500/20 flex items-center justify-center flex-shrink-0">
          <svg class="w-3.5 h-3.5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <p class="text-green-400 text-sm"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div class="mb-6 bg-red-500/10 border border-red-500/30 rounded-xl p-4">
      <div class="flex items-center gap-3">
        <div class="w-6 h-6 rounded-full bg-red-500/20 flex items-center justify-center flex-shrink-0">
          <svg class="w-3.5 h-3.5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>
        <p class="text-red-400 text-sm"><%= alert %></p>
      </div>
    </div>
  <% end %>

  <!-- Header -->
  <div class="text-center mb-8">
    <div class="w-16 h-16 bg-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-white mb-2">Enter verification code</h1>
    <p class="text-slate-400 text-sm">We've sent a 6-digit code to</p>
    <p class="text-orange-400 font-medium mt-1"><%= @email %></p>
  </div>

  <!-- Code Input Form -->
  <%= form_with url: verify_email_verification_path, method: :post, data: { turbo: false } do |form| %>
    <%= form.hidden_field :email, value: @email %>

    <div class="mb-6">
      <label class="block text-xs font-medium text-slate-400 mb-2 text-center">Verification Code</label>
      <input type="text"
             name="code"
             inputmode="numeric"
             pattern="[0-9]*"
             maxlength="6"
             autocomplete="one-time-code"
             required
             autofocus
             placeholder="000000"
             class="block w-full px-4 py-4 text-2xl text-center font-mono tracking-[0.5em] rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-600">
    </div>

    <%= form.submit "Verify Email",
        class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-4 rounded-lg text-sm transition-colors cursor-pointer" %>
  <% end %>

  <!-- Instructions -->
  <div class="bg-slate-800/50 rounded-xl p-4 mt-6">
    <div class="flex items-start gap-3">
      <div class="w-6 h-6 rounded-full bg-blue-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
        <svg class="w-3.5 h-3.5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="text-sm text-slate-300">
        <p class="mb-2">Enter the 6-digit code from your email.</p>
        <p class="text-slate-400">The code expires in 15 minutes.</p>
      </div>
    </div>
  </div>

  <!-- Resend Form -->
  <div class="mt-6 text-center">
    <p class="text-slate-400 text-sm mb-3">Didn't receive the code?</p>
    <%= form_with url: resend_email_verification_path, method: :post, data: { turbo: false }, class: "inline" do |form| %>
      <%= form.hidden_field :email, value: @email %>
      <%= form.submit "Resend code",
          class: "text-orange-400 hover:text-orange-300 text-sm font-medium cursor-pointer bg-transparent border-none" %>
    <% end %>
  </div>

  <!-- Divider -->
  <div class="border-t border-slate-700 mt-6 pt-6">
    <%= link_to login_path, class: "flex items-center justify-center text-slate-400 hover:text-white text-sm transition-colors", data: { turbo: false } do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to sign in
    <% end %>
  </div>
</div>
