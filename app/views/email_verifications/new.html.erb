<% content_for :title, "Verify Your Email - MerchantDex" %>

<!-- Single Dark Card -->
<div class="bg-slate-900 rounded-2xl p-8 shadow-2xl">
  <% if notice %>
    <div class="mb-6 bg-green-500/10 border border-green-500/30 rounded-xl p-4">
      <div class="flex items-center gap-3">
        <div class="w-6 h-6 rounded-full bg-green-500/20 flex items-center justify-center flex-shrink-0">
          <svg class="w-3.5 h-3.5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <p class="text-green-400 text-sm"><%= notice %></p>
      </div>
    </div>
  <% end %>
  <!-- Header -->
  <div class="text-center mb-8">
    <div class="w-16 h-16 bg-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-white mb-2">Check your email</h1>
    <p class="text-slate-400 text-sm">We've sent a verification link to</p>
    <p class="text-orange-400 font-medium mt-1"><%= @email %></p>
  </div>

  <!-- Instructions -->
  <div class="bg-slate-800/50 rounded-xl p-4 mb-6">
    <div class="flex items-start gap-3">
      <div class="w-6 h-6 rounded-full bg-blue-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
        <svg class="w-3.5 h-3.5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="text-sm text-slate-300">
        <p class="mb-2">Click the link in the email to verify your account.</p>
        <p class="text-slate-400">The link will expire in 24 hours.</p>
      </div>
    </div>
  </div>

  <!-- Resend Form -->
  <%= form_with url: email_verification_path, method: :post, data: { turbo: false } do |form| %>
    <%= form.hidden_field :email_address, value: @email %>
    <%= form.submit "Resend verification email", 
        class: "w-full bg-slate-800 hover:bg-slate-700 text-white font-medium py-3 px-4 rounded-lg text-sm transition-colors cursor-pointer" %>
  <% end %>

  <!-- Divider -->
  <div class="border-t border-slate-700 mt-6 pt-6">
    <%= link_to login_path, class: "flex items-center justify-center text-slate-400 hover:text-white text-sm transition-colors", data: { turbo: false } do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to sign in
    <% end %>
  </div>
</div>

