<% content_for :title, "Sign Up - MerchantDex" %>

<!-- Single Dark Card -->
<div class="bg-slate-900 rounded-2xl p-8 shadow-2xl">
  <!-- Header -->
  <div class="text-center mb-8">
    <h1 class="text-2xl font-bold text-white mb-2">Create your account</h1>
    <p class="text-slate-400 text-sm">Start tracking profits in 30 seconds</p>
  </div>

  <!-- Form -->
  <%= form_with model: @user, url: signup_path, method: :post, data: { turbo: false } do |form| %>
    <!-- Error Messages -->
    <% if @user.errors.any? %>
      <div class="mb-6 bg-gradient-to-r from-red-500/10 to-orange-500/10 rounded-xl p-4 border border-red-500/30">
        <div class="flex items-start gap-3">
          <div class="w-8 h-8 rounded-full bg-red-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
            <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-red-400 font-medium text-sm mb-2">Please fix the following:</p>
            <ul class="space-y-1.5">
              <% @user.errors.full_messages.each do |message| %>
                <li class="flex items-center gap-2 text-slate-300 text-sm">
                  <span class="w-1 h-1 rounded-full bg-red-400 flex-shrink-0"></span>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Email Field -->
    <div class="mb-4">
      <label class="block text-xs font-medium text-slate-400 mb-2">Email</label>
      <%= form.email_field :email_address,
          required: true,
          autofocus: true,
          autocomplete: "email",
          placeholder: "you@example.com",
          class: "block w-full px-4 py-3 text-sm rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-500" %>
    </div>

    <!-- Password Field -->
    <div class="mb-4">
      <label class="block text-xs font-medium text-slate-400 mb-2">Password</label>
      <%= form.password_field :password,
          required: true,
          autocomplete: "new-password",
          placeholder: "Min 8 characters",
          class: "block w-full px-4 py-3 text-sm rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-500" %>
    </div>

    <!-- Password Confirmation -->
    <div class="mb-6">
      <label class="block text-xs font-medium text-slate-400 mb-2">Confirm Password</label>
      <%= form.password_field :password_confirmation,
          required: true,
          autocomplete: "new-password",
          placeholder: "Repeat password",
          class: "block w-full px-4 py-3 text-sm rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-500" %>
    </div>

    <!-- Terms Checkbox -->
    <div class="mb-6">
      <label class="flex items-start gap-3 cursor-pointer group">
        <input type="checkbox" name="terms_accepted" required
               class="mt-0.5 w-4 h-4 rounded border-slate-600 bg-slate-800 text-orange-500 focus:ring-orange-500 focus:ring-offset-0 focus:ring-offset-slate-900 cursor-pointer">
        <span class="text-xs text-slate-400 group-hover:text-slate-300 transition-colors">
          I agree to the <a href="#" class="text-orange-400 hover:text-orange-300 underline">Terms of Service</a> and <a href="#" class="text-orange-400 hover:text-orange-300 underline">Privacy Policy</a>
        </span>
      </label>
    </div>

    <!-- Submit Button -->
    <%= form.submit "Create account",
        class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-4 rounded-lg text-sm transition-colors cursor-pointer" %>
  <% end %>

  <!-- Sign In Button -->
  <%= link_to login_path, class: "block w-full text-center bg-slate-800 hover:bg-slate-700 text-white font-medium py-3 px-4 rounded-lg text-sm transition-colors mt-3", data: { turbo: false } do %>
    Sign in
  <% end %>

  <!-- Footer Text -->
  <p class="text-white text-xs text-center mt-6">Already have an account? Sign in above</p>
</div>
