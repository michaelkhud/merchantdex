<% content_for :title, "Dashboard - MerchantDex" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-orange-50">
  <div class="max-w-7xl mx-auto px-6 lg:px-8 py-12">
    <!-- Welcome Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-slate-900 mb-2">Welcome back!</h1>
      <p class="text-slate-600">Here's your P2P merchant dashboard</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <p class="text-2xl font-bold text-slate-900 mb-1">$<%= number_with_precision(@total_profit, precision: 2, delimiter: ',') %></p>
        <p class="text-sm text-slate-500">Total Profit</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
        </div>
        <p class="text-2xl font-bold text-slate-900 mb-1"><%= number_with_delimiter(@total_trades) %></p>
        <p class="text-sm text-slate-500">Trades</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
        </div>
        <p class="text-2xl font-bold text-slate-900 mb-1"><%= @unique_clients %></p>
        <p class="text-sm text-slate-500">Clients</p>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <!-- Import Trades -->
      <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
        <div class="p-6 text-center">
          <div class="w-14 h-14 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">Import Trades</h3>
          <p class="text-slate-500 text-sm mb-6">LocalCoinSwap, Binance, Bybit, KuCoin, OKX</p>
          <%= form_with url: trades_path, method: :post, multipart: true, id: "import-form", data: { turbo: false } do |form| %>
            <%= form.file_field :trade_file, accept: ".csv,.xls,.xlsx", required: true, class: "hidden", id: "trade-file-input",
                onchange: "document.getElementById('import-form').submit(); document.getElementById('import-btn').classList.add('opacity-75', 'pointer-events-none'); document.getElementById('import-btn-text').textContent = 'Uploading...';" %>
            <label for="trade-file-input" id="import-btn" class="inline-flex items-center justify-center gap-2 bg-orange-500 hover:bg-orange-600 text-white px-8 py-3 rounded-lg font-semibold transition-all cursor-pointer">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              <span id="import-btn-text">Import File</span>
            </label>
          <% end %>
        </div>
        <div class="bg-slate-50 px-6 py-3 text-center border-t border-slate-100">
          <span class="text-xs text-slate-500">Supports CSV & Excel files</span>
        </div>
      </div>

      <!-- View Trades -->
      <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
        <div class="p-6 text-center">
          <div class="w-14 h-14 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-2">View Trades</h3>
          <p class="text-slate-500 text-sm mb-6">
            <% if @total_trades > 0 %>
              <%= @total_trades %> trades across <%= @platforms.count %> platforms
            <% else %>
              No trades imported yet
            <% end %>
          </p>
          <%= link_to trades_path, class: "inline-flex items-center justify-center gap-2 bg-slate-900 hover:bg-slate-800 text-white px-8 py-3 rounded-lg font-semibold transition-all" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            View All
          <% end %>
        </div>
        <div class="bg-slate-50 px-6 py-3 text-center border-t border-slate-100">
          <% if @platforms.any? %>
            <div class="flex justify-center gap-2">
              <% @platforms.each do |platform| %>
                <span class="text-xs text-slate-500"><%= platform.titleize %></span>
                <% unless platform == @platforms.last %><span class="text-slate-300">â€¢</span><% end %>
              <% end %>
            </div>
          <% else %>
            <span class="text-xs text-slate-500">Import trades to get started</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Account Info -->
    <div class="mt-8 bg-white rounded-xl p-6 shadow-sm border border-slate-200">
      <h3 class="text-lg font-semibold text-slate-900 mb-4">Account Information</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between py-3 border-b border-slate-100">
          <span class="text-slate-600">Email</span>
          <span class="text-slate-900 font-medium"><%= @user.email_address %></span>
        </div>
        <div class="flex items-center justify-between py-3 border-b border-slate-100">
          <span class="text-slate-600">Member since</span>
          <span class="text-slate-900 font-medium"><%= @user.created_at.strftime("%B %d, %Y") %></span>
        </div>
        <div class="flex items-center justify-between py-3">
          <span class="text-slate-600">Account status</span>
          <span class="px-3 py-1 bg-green-100 text-green-700 text-sm rounded-full font-medium">Active</span>
        </div>
      </div>
    </div>
  </div>
</div>
