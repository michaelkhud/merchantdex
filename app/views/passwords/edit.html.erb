<% content_for :title, "Set New Password - MerchantDex" %>

<!-- Single Dark Card -->
<div class="bg-slate-900 rounded-2xl p-8 shadow-2xl">
  <!-- Header -->
  <div class="text-center mb-8">
    <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-white mb-2">Set new password</h1>
    <p class="text-slate-400 text-sm">Choose a strong password</p>
  </div>

  <!-- Form -->
  <%= form_with url: password_path(params[:token]), method: :put, data: { turbo: false } do |form| %>
    <!-- Password Field -->
    <div class="mb-4">
      <label class="block text-xs font-medium text-slate-400 mb-2">New Password</label>
      <%= form.password_field :password, 
          required: true, 
          autofocus: true,
          autocomplete: "new-password", 
          placeholder: "Min 8 characters",
          maxlength: 72,
          class: "block w-full px-4 py-3 text-sm rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-500" %>
    </div>

    <!-- Password Confirmation -->
    <div class="mb-6">
      <label class="block text-xs font-medium text-slate-400 mb-2">Confirm Password</label>
      <%= form.password_field :password_confirmation, 
          required: true, 
          autocomplete: "new-password", 
          placeholder: "Repeat password",
          maxlength: 72,
          class: "block w-full px-4 py-3 text-sm rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-500" %>
    </div>

    <!-- Submit Button -->
    <%= form.submit "Update password", 
        class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-4 rounded-lg text-sm transition-colors cursor-pointer" %>
  <% end %>

  <!-- Info -->
  <div class="mt-6 flex items-center gap-2 text-slate-500 text-xs">
    <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    You'll be signed out of all devices
  </div>
</div>
