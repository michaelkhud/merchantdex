<% content_for :title, "Reset Password - MerchantDex" %>

<!-- Single Dark Card -->
<div class="bg-slate-900 rounded-2xl p-8 shadow-2xl">
  <!-- Header -->
  <div class="text-center mb-8">
    <div class="w-12 h-12 bg-orange-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-white mb-2">Forgot password?</h1>
    <p class="text-slate-400 text-sm">We'll send you reset instructions</p>
  </div>

  <!-- Form -->
  <%= form_with url: passwords_path, method: :post, data: { turbo: false } do |form| %>
    <!-- Email Field -->
    <div class="mb-6">
      <label class="block text-xs font-medium text-slate-400 mb-2">Email</label>
      <%= form.email_field :email_address, 
          required: true, 
          autofocus: true, 
          autocomplete: "email", 
          placeholder: "you@example.com", 
          value: params[:email_address],
          class: "block w-full px-4 py-3 text-sm rounded-lg border border-slate-700 bg-slate-800 text-white focus:border-orange-500 focus:ring-1 focus:ring-orange-500 focus:outline-none transition-all placeholder-slate-500" %>
    </div>

    <!-- Submit Button -->
    <%= form.submit "Send reset link", 
        class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-4 rounded-lg text-sm transition-colors cursor-pointer" %>
  <% end %>

  <!-- Divider -->
  <div class="border-t border-slate-700 mt-6 pt-6">
    <%= link_to login_path, class: "flex items-center justify-center text-slate-400 hover:text-white text-sm transition-colors", data: { turbo: false } do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to sign in
    <% end %>
  </div>
</div>
